@model User
@{
    ViewData["Title"] = "About";
}

<h2> Username / Password Demo </h2>
@try {
@if (Model.Username != "")
{
<div class="btn-group-lg">
    <table class="table">
        <tr>
            <td>Username: @Model.Username</td>
            <td>Password: @Model.Password</td>
            <td>ID: @Model.ID</td>
        </tr>
    </table>
</div>
}
} catch (Exception)
{
    <h3> Create an account to display data: </h3>
}

<div class="col-lg-2">
    <div class="left">
        <form asp-controller="Home" asp-action="About" method="post">
            <div class="form-group">
                <label class="control-label" for="username">Username:</label>
                <input asp-for="Username" class="form-control" type="text" placeholder="Username" />
            </div>
            <div class="form-group">
                <label class="control-label" for="username">Password:</label>
                <input asp-for="Password" class="form-control" type="text" placeholder="Password" />
            </div>
            <div class="form-group">
                <>
                <label class="control-label" for="username">Confirm:</label>
                <input asp-for="Confirm" class="form-control" type="text" placeholder="Confirm Password" />
            </div>
            <div class="form-group text-danger" asp-validation-summary="ValidationSummary.All">
            </div>
            <div class="form-group">
                <button class="btn btn-danger" type="submit" style="width: 280px;">ENTER</button>
            </div>
        </form>
    </div>
</div>



@for(int i = 0; i < 10; i++) {
<p>I am in the about view</p>
}